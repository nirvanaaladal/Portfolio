   <top>
      <HBox prefHeight="68.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAdd" prefHeight="33.0" prefWidth="81.0" text="Add">
