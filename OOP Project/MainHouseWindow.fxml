            <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdate" prefHeight="33.0" prefWidth="81.0" text="Update">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin></Button>
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDelete" prefHeight="33.0" prefWidth="81.0" text="Delete">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin></Button>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" prefHeight="33.0" prefWidth="81.0" text="Save">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
   </top>
   <center>
      <AnchorPane prefHeight="462.0" prefWidth="744.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="houseTable" prefHeight="394.0" prefWidth="664.0">
               <columns>
                  <TableColumn fx:id="houseCol" minWidth="20.0" prefWidth="129.0" text="House No." />
                  <TableColumn fx:id="addressCol" minWidth="20.0" prefWidth="122.0" text="Address" />
                  <TableColumn fx:id="descriptionCol" prefWidth="133.0" text="Description" />
                  <TableColumn fx:id="priceCol" prefWidth="133.0" text="Price" />
                  <TableColumn fx:id="availabilityCol" prefWidth="146.0" text="Availability" />
               </columns>
            </TableView>
         </children>
      </AnchorPane>
   </center>
